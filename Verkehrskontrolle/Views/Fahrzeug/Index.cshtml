@model IEnumerable<Verkehrskontrolle.Models.Fahrzeug>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Antrieb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sitze)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leistung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZulassungDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TüvDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kennzeichen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Halter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Antrieb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sitze)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leistung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZulassungDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TüvDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kennzeichen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Halter.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
